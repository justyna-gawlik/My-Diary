<%-include("partials ejs/header welcome")-%>
<br>
<div class="row mt-1">
<div class="col-md-6 m-auto">
<div class="card card-body register">
<div class="register-container">
    <h1> Register</h1>
    <%- include('partials ejs/messages'); %>
                <form action="/register" method="post">
                    <div class="form-group">
                        <label for="name">Name</label>
                        <input
                          type="name"
                          id="name"
                          name="name"
                          class="form-control"
                          placeholder="Enter Name"
                          value="<%= typeof name != 'undefined' ? name : '' %>"
                        />
                      </div>
                      <div class="form-group">
                        <label for="email">Email</label>
                        <input
                          type="email"
                          id="email"
                          name="email"
                          class="form-control"
                          placeholder="Your Email"
                          value="<%= typeof email != 'undefined' ? email : '' %>"
                        />
                      </div>
                      <div class="form-group">
                        <label for="password">Password</label>
                        <input
                          type="password"
                          id="password"
                          name="password"
                          class="form-control"
                          placeholder="Create Password"
                          value="<%= typeof password != 'undefined' ? password : '' %>"
                        />
                      </div>
                    <div class="form-group">
                        <label for="password">Confirm Password</label>
                        <input type="password"
                        id="password2" 
                        class="form-control" name="password2" placeholder="Confirm Password"
                        value="<%= typeof password2 !='undefined'?password2:'' %>">
                    </div>
                    <button type="submit" class="btn btn-primary btn-md btn-block wavesenter m-b-20">Sign Up</button>

                    <div class="or-container">
                        <div class="line-separator"></div>
                        <div class="or-label">or</div>
                        <div class="line-separator"></div>
                    </div>

                    <a class="btn btn-md btn-google btn-block text-uppercase btn-outline" href="/auth/google"><img
                            src="https://img.icons8.com/color/16/000000/google-logo.png">
                        Sign Up with
                        Google</a>
                    </br>
                    <p class="text-inverse text-center">
                        Already have an account? <a href="/login">Login</a></p>

                </form>

            </div>
        </div>
    </div>
</div>
</div>
</div>
</div>
